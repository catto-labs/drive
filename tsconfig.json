{
  "compilerOptions": {
    "noErrorTruncation": true,
    
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    
    "strict": true,
    "noEmit": true,
    
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },

    "types": [
      "solid-start/env",
      "unplugin-icons/types/solid"
    ],
  },

  "include": ["src", "supabase", ".eslintrc.cjs", "vite.config.ts", "uno.config.ts"],
  "exclude": ["node_modules/**", "dist/**", ".solid/**"]
}
